/**cardRecord.wxss**/
.chart{
    width:100%;
    padding-top:10rpx;/**暂时这么写，后期修改**/
    background-color:white;
}
.chart-duration>text:first-child{
    color: #999999;
}
.chart-duration{
    font-size: 28rpx;
    display: inline-block;
    margin-left: 30rpx;
}
.tips{
    font-size: 24rpx;
    color: #999999;
    padding-bottom: 30rpx;
    margin-left: 30rpx;
}
.tips image{
    height: 27rpx;
    width: 20rpx;
    margin-right: 10rpx;
    vertical-align: middle
}
.total-card{
    font-size: 28rpx;
    display: inline-block;
    float: right;
    margin-right: 30rpx;
}
.total-card>text:first-child{
    color: #4fb3fd
}
.middle{
    height: 20rpx;
    width:100%;
    background-color: #eeeeee;
}
.noCardRecordList{
    height: 680rpx;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;

}
.noRecord image{
      width:255rpx;
      height: 240rpx;
}
.noRecordTips{
    word-break: break-all;
    width:30%;
    font-size: 28rpx;
    color: #999999;
    line-height: 50rpx;
}
.play{
    position: relative;
    height: 117rpx;
    width:117rpx;
    border-radius: 50%;
    margin-left: 30rpx;
    background-size: cover;
}

.cardRecord{
    display: flex;
    flex-direction: column;
    width:100%;
}
.cardRecordList image{
    height: 117rpx;
    width: 117rpx;
}
.cardRecordList{
    width: 100%;
    height:176rpx;
    display: flex;
    justify-content: space-between;
    flex-direction: row; 
    align-items: center;
    border-bottom:1px solid #e8e8e8;
    background:white;

}
.cid{
    font-size: 28rpx;
    height: 78rpx;
    width: 580rpx;
    overflow: hidden;
}
.duration{
    font-size: 26rpx;
    color: #666666;

}

.cardInfo{
    width: 78%;
    height: 124rpx;
 
}
.createAt{
  color: #999999;
  font-size: 24rpx;
  float: right;
  margin-right: 14rpx;
  margin-top: 12rpx;
}